#!/usr/bin/env bash

__config_update() {
    case "${1}" in
        all)
            config pull && config update submodule && config update brew && config update python && config update vim && config reload
            ;;
        brew)
            if command -v brew > /dev/null 2>&1; then
                brew update && brew upgrade && brew bundle cleanup --force && brew bundle
            else
                echo "brew not found."
            fi
            ;;
        python)
            /usr/local/bin/pip3 install --break-system-packages -r "${HOME}/.config/python/requirements.txt"
            if [ -f "${HOME}/.local/python/requirements.txt" ]; then
                /usr/local/bin/pip3 install --break-system-packages -r "${HOME}/.local/python/requirements.txt"
            fi
            ;;
        submodule)
            config submodule update --init --recursive
            ;;
        vim)
            if command -v nvim > /dev/null 2>&1; then
                nvim --headless "+Lazy! sync" +qa!
            else
                echo "nvim not found."
            fi
            ;;
        *)
            echo "\"${1}\" is not a valid update command."
    esac
}

config() {
    case "${1}" in
        reload)
            source "${HOME}/.bash_profile"
            ;;
        update)
            shift
            __config_update "${@}"
            ;;
        *)
            git --git-dir="${HOME}/.dotfiles.git" --work-tree="${HOME}" "${@}"
    esac
}

config "${@}"
